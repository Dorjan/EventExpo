<div class ="card card-body mb-2">
    <div id="map-container" style='width: 460px; height: 300px;' class="map-container z-depth-1-half"></div>
  <input type = "hidden" id = "mappa" value = "{{event.luogo.coordinate.[0]}}"  />
   <input type = "hidden" id = "secondo" value = "{{event.luogo.coordinate.[1]}}"  />
  <h4 align="center">{{event.titolo}}</h4>
  <p>descrizione</p>
  <p>{{event.descrizione}}</p>
  <p><b>Data:</b> {{formatDate event.data 'MMMM Do YYYY'}}</p>
  <p><b>Ora:</b> {{formatDate event.data 'HH:mm'}}</p>
  <p id="mappa"><b>luogo:</b>  {{event.luogo.coordinate.[1]}}</p>
  

  <!-- to make visible join button only if user is logged-->
  {{#if user}}
    <form action="/events/partecipa/{{event.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <button type="submit" id="partecipa" class="btn btn-primary btn-block" value="Partecipa">
        Partecipa
      </button>
    </form>
  {{else}}
    <p>Fai il <a href="/auth/login">log-in</a> per partecipare all'evento</p>
  {{/if}}
</div>
</div>


